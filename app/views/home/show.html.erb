
  <div class="row">
    <div class="small-8 large-8 columns">
      <div id='map'></div>
      <div id='game-detail'></div>
    </div>
    <% if !current_user %>
      <div class='small-4 large-4 columns'>
        Sign in with your facebook account to view games!
      </div>
    <% else %>
    <div class='small-4 large-4 columns'>
      <form id='query-form' action='/' method='get'>
        <input id='queryInput' type='date' name='date' value='<%=params[:date]%>' placeholder="<%=params[:date].present? ? params[:date] : 'Date Filter' %>">
      </form>
        <% if params[:date].present? %>
          <a href='/' class='button success'>Show All</a>
        </form>
        <%end%>
      <p class='reveal-form button primary'>Add a game:</p>
      <div class='new-form'>
        <%= render partial: 'games/form' %>
      </div>
    </div>
  </div>
  </div>
  </div>
<%end%>

<script src='https://maps.googleapis.com/maps/api/js?key=<%=Rails.application.secrets.gmaps%>&callback=initMap'>
</script>
