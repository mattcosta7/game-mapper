<div class='small-8 large-8 columns'>
  <div class='games-details'>
    <%= image_tag "/assets/#{@game.get_banner_image}" %>
    <div class='detes'>
      <p>
        When's the game, dude? <%= @game.display_time %>
        <br>
        What are ya playin? <%= @game.sport_name %>
        <br>
        How good are ya? <%= @game.skill %>
        <br>
        Who's runing this show? <%= @game.creator.name %>
        <br> Where's it gonna be? <%=@game.address%>
      </p>
    </div>
  </div>
  <button class='button primary' id='back'>
    Back To Map
  </button>

  <% if @game.attendees.include?(current_user) %>
    <div class='messenger' id='game<%=@game.id%>'>
      <div id="messages"><%=@game.sport_name%> Trash Talk</div>
      <input id="chat-input" class="form-control" type="text" placeholder="say anything" autofocus/>
    </div>
  <%else%>
    <p>Join the game to start trash talking</p>
  <%end%>
</div>

<div class='small-4 large-4 columns game show' id='game_show'>
  <%= render partial: 'attendees'%>
</div>

